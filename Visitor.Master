    <style>
        .container {
            margin: 0 auto;
            padding-left: 1px;
            padding-right: 1px;
            max-width: 1200px;
        }

        body{
            background-color:#FEFAF6;
        }
        .login {
            background: #3434eb;
            border-radius: 8px;
            color: #ffffff;
            font-family:"Inter";
            border:none;
            cursor:pointer;
            height:40px;
