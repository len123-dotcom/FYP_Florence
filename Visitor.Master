        }

        .footer-subscribe {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .footer-subscribe input[type="email"] {
            border: 1px solid #ccc;
            border-radius: 4px 0 0 4px;
            padding: 10px 15px;
            height: 20px;
            width: 250px;
            font-size: 14px;
        }

        .footer-subscribe button {
            background: #61b752;
            border: none;
            border-radius: 0 4px 4px 0;
            padding: 0 15px;
            height: 40px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .footer-subscribe button img {
            width: 20px;
            height: 20px;
        }

        #msg {
            display: block;
            text-align: center;
            margin-top: 10px;
            color: #61b752;
            font-size: 14px;
        }

        .footer-socials {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 15px;
        }

        .footer-social-link {
            display: flex;
            align-items: center;
            gap: 5px;
            color: #333;
            text-decoration: none;
            font-size: 20px;
            transition: color 0.3s ease;
        }

        .footer-social-link:hover {
            color: #61b752;
        }

        .footer-social-link i {
            font-size: 20px;
        }

    </style>
    <asp:ContentPlaceHolder ID="head" runat="server">
