        }

        .user-controls {
            position: absolute;
            top: 60px;
            right: 70px;
            display: flex;
            align-items: center;
            gap:30px;

        }
        .user-controls a,
        .user-controls button {
            margin-left: 10px;
            font-weight: normal
        }
        .user-link {
            background: #005AE5;
            border-radius: 8px;
            color: #ffffff;
            font-family: "poppinssemibold";
